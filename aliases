# Get External IP / local IPs
alias ip="echo 'IPv4' && curl ipinfo.io/ip && echo '---\nLocal' && hostname -I"

# Quickly serve the current directory as HTTP
alias serve='ruby -run -e httpd . -p 8000'  # Or python -m SimpleHTTPServer :)

# Git
alias ga='git add'
alias gc='git commit -v'
alias gd='git diff'
alias gf='git add . && git stash'
alias gst='git status'
alias gco='git checkout'
alias greb='git rebase -i'
alias ggp='git push origin HEAD'

# Navigation
alias lectures='cd ~/code/lewagon/lectures'
alias livecodes='cd ~/code/lewagon/livecodes'
alias repos='cd ~/code/caioertai'
alias baires='cd ~/code/bairesdev'
alias downloads='cd ~/Downloads'

# Rails
alias cov='opera coverage/index.html'
alias migrate='rails db:migrate'
alias rs='rails s'

# Fun
alias nyan='~/code/caioertai/nyancat/src/nyancat'
